<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#BDBDBD">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:clickable="true"
                android:id="@+id/first_cardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_location_on_black"
                        />

                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:text="Category 1"
                        android:textStyle="bold"
                        android:textSize="35sp"
                        android:layout_centerHorizontal="true"/>

                    <ImageButton
                        android:id="@+id/first_category_delete_all"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_cancel_black" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/first_category_list">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:id="@+id/second_cardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_receipt_black"
                        />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:text="Category 2"
                        android:textStyle="bold"
                        android:textSize="35sp"
                        android:layout_centerHorizontal="true"/>

                    <ImageButton
                        android:id="@+id/second_category_delete_all"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_cancel_black" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/second_category_list">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:id="@+id/third_cardview">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <ImageView
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:src="@drawable/ic_streetview_black"
                        />


                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="0dp"
                        android:layout_weight="1"

                        android:layout_gravity="center"
                        android:text="Category 3"
                        android:textStyle="bold"
                        android:textSize="35sp"
                        android:layout_centerHorizontal="true"/>

                    <ImageButton
                        android:id="@+id/third_category_delete_all"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_cancel_black" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/third_category_list">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>